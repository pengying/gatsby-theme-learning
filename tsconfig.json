{
  "compilerOptions": {
    "target": "ES6",
    "module": "esnext",
    "jsx": "react",
    "lib": ["dom", "es2016"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "noEmit": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true
  },
  "include": [
    "./themes/**/src/**/*",
    "./examples/**/src/**/*",
  ],
  "exclude": ["node_modules", "themes/**/node_modules"]
}
